import tkinter as tk
from tkinter import messagebox
import random

# DoÄŸru cevap deÄŸiÅŸkeni
correct_answer = 0

def generate_question():
    """Yeni bir Ã§arpma sorusu oluÅŸtur ve ekrana yaz."""
    global correct_answer
    num1 = random.randint(10, 99)
    num2 = random.randint(10, 99)
    correct_answer = num1 * num2
    question_label.config(text=f"{num1} x {num2} = ?")
    answer_entry.delete(0, tk.END)  # Cevap kutusunu temizle

def check_answer():
    """KullanÄ±cÄ±nÄ±n cevabÄ±nÄ± kontrol et."""
    user_answer = answer_entry.get()
    try:
        user_answer = int(user_answer)
        if user_answer == correct_answer:
            result_label.config(text="DoÄŸru! ğŸ‰", fg="green")
        else:
            result_label.config(
                text=f"YanlÄ±ÅŸ! DoÄŸru cevap: {correct_answer}", fg="red"
            )
    except ValueError:
        result_label.config(text="LÃ¼tfen bir sayÄ± girin!", fg="orange")
    generate_question()  # Yeni bir soru oluÅŸtur

# Ana pencere
root = tk.Tk()
root.title("Ã‡arpma Oyunu")
root.geometry("300x200")

# Soru alanÄ±
question_label = tk.Label(root, text="", font=("Arial", 16))
question_label.pack(pady=10)

# KullanÄ±cÄ± giriÅŸ alanÄ±
answer_entry = tk.Entry(root, font=("Arial", 14))
answer_entry.pack(pady=10)

# Kontrol butonu
check_button = tk.Button(root, text="CevabÄ± Kontrol Et", command=check_answer)
check_button.pack(pady=10)

# SonuÃ§ alanÄ±
result_label = tk.Label(root, text="", font=("Arial", 14))
result_label.pack(pady=10)

# Ä°lk soruyu oluÅŸtur
generate_question()

# Tkinter dÃ¶ngÃ¼sÃ¼
root.mainloop()
